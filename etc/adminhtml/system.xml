<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="cache" translate="label comment" type="text" sortOrder="180" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Cache</label>
                <field id="alekseon_cache_cleaner_enabled" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Refresh the Category Cache only if stock status changed for visible products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable this option reduce the frequency of clearing the category cache. Only enable it if sizes are not displayed on the category page.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
